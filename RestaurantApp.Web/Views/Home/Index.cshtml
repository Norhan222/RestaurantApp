@model MenuVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container   my-4  con">
    <!-- 🔹 Section Header -->
    <div class="text-center mb-5 category-header">
        <h6 class="top-head">TOP FOODS</h6>
        <h2 class="section__header">Our <span>Categories</span></h2>
    </div>

    <!-- 🔹 Categories Grid -->
    <div class="row justify-content-center text-center g-4">
        @foreach (var category in Model.Categories)
        {
            <div class="col-sm-6 col-md-4 col-xl-3 col-lg-3">
                <div class="category-card">
                    <div class="image-container mb-3">
                        <img src="~/Files/Category/@category.ImageUrl" class="img-fluid rounded-circle shadow-sm category-img" alt="@category.Name" />
                    </div>
                    <h5 class="fw-semibold">@category.Name</h5>
                </div>
            </div>
        }
    </div>
</div>



<section class="section__container menu__container" id="menu">
    <h2 class="section__header">Our Popular <span>Dishes</span></h2>
    <div class="menu__grid">
        @foreach (var item in Model.MenuItems)
        {
            <div class="menu__card">
                <img src="~/Files/menuItem/@item.ImageUrl" alt="menu" />
                <h4>@item.Name</h4>
                <p>
                    @item.Description
                </p>
                <div class="menu__card__footer">
                    <h3>$@item.Price</h3>
                    <button class="btn" onclick="addtocart(@item.Id)">Add To Cart</button>
                </div>
            </div>
        }
    </div>

    <div class="menu__btn">
        <a asp-action="AllMenu" asp-controller="Home" class="btn">
            See All Dishes
            <span><i class="ri-arrow-right-line"></i></span>
        </a>
    </div>
</section>



<section class="service" id="service">
