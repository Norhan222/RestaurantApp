	<script>
		$(document).ready(function(){
			$.get('/Cart/GetCartCount',function(data){
				$('#cartcount').text(data.count)
			});
		});
		function addtocart(itemid)
		{
			$.post('/Cart/AddToCart',{id:itemid},function(data){
				if(data.success){
					$('#cartcount').text(data.count)
				}
			});
		}
	</script>


