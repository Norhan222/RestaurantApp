								<li>
									<a href="#">About</a>
								</li>
								<li>
									<a href="news.html">News</a>
									
								</li>
								<li><a asp-action="Contact">Contact</a></li>
								<li>
									<a href="shop.html">Orders</a>
								</li>


								<li>
									<div class="header-icons">

										<a asp-action="Index" asp-controller="Cart" class="shopping-cart">
											<i class="fa fa-shopping-cart fa-lg"></i>
											<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger  text-white " id="cartcount">
												0
											</span>
										</a>
										@if (user == null)
										{
											<a asp-action="Login" asp-controller="Account" class="mobile-hide rounded-pill d-inline-flex align-items-center justify-content-center px-4 py-1 ml-1" style="background-color:orangered;border:none;">Login</a>
										}
										else{
											<a asp-action="SignOut" asp-controller="Account" class="mobile-hide rounded-pill d-inline-flex align-items-center justify-content-center px-4 py-1 ml-1" style="background-color:orangered;border:none;">Logout</a>

										}

								 </div> 
							</li> 
							</ul>
						</nav>
					<a class="mobile-show search-bar-icon" href="#"></a>
						<div class="mobile-menu"></div> 
						<!-- menu end -->
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<!-- end header -->

	<!-- hero area -->
	@if (ViewData["Title"].ToString() == "Index")
	{
		<div class="hero-area hero-bg">
			<div class="container">
				<div class="row">
					<div class="col-lg-9 offset-lg-2 text-center">
						<div class="hero-text">
							<div class="hero-text-tablecell">
								<p class="subtitle">Taste & Enjoy</p>
								<h1>Your Daily Does of Deliciousness</h1>
								<div class="hero-btns">
									<a href="#menu" class="boxed-btn">Order Now</a>
									<a href="contact.html" class="bordered-btn">Contact Us</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
	else{

	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Fresh taste every time</p>
							<h1>@ViewData["Title"]</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	}
